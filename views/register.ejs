<%- include('partials/header') %>

<h2>Register</h2>

<% if (typeof errors != 'undefined' && errors.length > 0) { %>
  <ul>
    <% errors.forEach(function(error) { %>
      <li class="error"><%= error.msg %></li>
    <% }); %>
  </ul>
<% } %>

<form action="/auth/register" method="POST">
  <input type="text" name="name" placeholder="Name" value="<%= typeof name != 'undefined' ? name : '' %>" required /><br>
  <input type="email" name="email" placeholder="Email" value="<%= typeof email != 'undefined' ? email : '' %>" required /><br>
  <input type="password" name="password" placeholder="Password" required /><br>
  <input type="password" name="password2" placeholder="Confirm Password" required /><br>
  <button type="submit">Register</button>
</form>
<p>Already have an account? <a href="/">Login</a></p>

<%- include('partials/footer') %>
